index.html
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Rosas girando en el lago</title>
  <style>
    /* Estilos para fondo tipo lago y canvas */
    body {
      margin: 0;
      overflow: hidden;
      background: linear-gradient(to bottom, #87ceeb, #1e90ff);
    }
    canvas {
      display: block;
    }
  </style>
</head>
<body>
  <canvas id="canvas"></canvas>

  <script>
    // Configuración del canvas
    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    // Clase para cada rosa
    class Rosa {
      constructor(x, y) {
        this.x = x;
        this.y = y;
        this.angle = Math.random() * Math.PI * 2;
        this.speed = 0.01 + Math.random() * 0.03;
        this.size = 20 + Math.random() * 20;
        this.petalCount = 5 + Math.floor(Math.random() * 3);
        this.color = `hsl(350, 70%, ${40 + Math.random() * 20}%)`; // tonos rosas/rojos
        this.wave = Math.random() * 0.5;
      }

      update() {
        this.angle += this.speed;
        // Movimiento suave como si flotara
        this.y += Math.sin(Date.now() * 0.001 + this.wave) * 0.5;
        this.x += Math.sin(Date.now() * 0.001 + this.wave) * 0.5;
      }

      draw() {
        ctx.save();
        ctx.translate(this.x, this.y);
        ctx.rotate(this.angle);

        // Dibujar pétalos
        for (let i = 0; i < this.petalCount; i++) {
          ctx.rotate((2 * Math.PI) / this.petalCount);
          ctx.beginPath();
          ctx.ellipse(0, this.size / 2, this.size / 5, this.size / 2, 0, 0, 2 * Math.PI);
          ctx.fillStyle = this.color;
          ctx.fill();
        }

        // Centro amarillo
        ctx.beginPath();
        ctx.arc(0, 0, this.size / 4, 0, 2 * Math.PI);
        ctx.fillStyle = 'yellow';
        ctx.fill();

        ctx.restore();
      }
    }

    // Crear varias rosas
    const rosas = [];
    for (let i = 0; i < 25; i++) {
      rosas.push(new Rosa(Math.random() * canvas.width, Math.random() * canvas.height));
    }

    // Animación
    function animate() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      // Fondo tipo lago con gradiente radial suave
      const gradient = ctx.createRadialGradient(canvas.width/2, canvas.height/2, 0, canvas.width/2, canvas.height/2, canvas.width/2);
      gradient.addColorStop(0, 'rgba(135,206,235,0.3)');
      gradient.addColorStop(1, 'rgba(30,144,255,0.6)');
      ctx.fillStyle = gradient;
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      rosas.forEach(rosa => {
        rosa.update();
        rosa.draw();
      });

      requestAnimationFrame(animate);
    }

    animate();
  </script>
</body>
</html>
